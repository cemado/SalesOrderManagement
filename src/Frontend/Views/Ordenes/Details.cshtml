@model Frontend.Models.OrdenViewModel

@{
    ViewData["Title"] = $"Orden #{Model.Id}";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-file-earmark-text"></i> Detalle de Orden #@Model.Id
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
    </div>

    <!-- Información General -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-info-circle"></i> Información General
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Cliente:</dt>
                        <dd class="col-sm-8">@Model.Cliente</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning text-dark">@Model.Estado</span>
                        </dd>

                        <dt class="col-sm-4">Total:</dt>
                        <dd class="col-sm-8 text-success fw-bold fs-5">
                            $@Model.Total.ToString("N2")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">
                <i class="bi bi-cart"></i> Productos
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio Unitario</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.Detalles)
                        {
                            <tr>
                                <td>@detalle.Producto</td>
                                <td class="text-center">@detalle.Cantidad</td>
                                <td class="text-end">$@detalle.PrecioUnitario.ToString("N2")</td>
                                <td class="text-end fw-bold">$@detalle.Subtotal.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold fs-5">
                                <i class="bi bi-calculator"></i> TOTAL:
                            </td>
                            <td class="text-end fw-bold text-success fs-4">
                                $@Model.Total.ToString("N2")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Acciones -->
    <div class="mt-4 d-flex gap-2">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

        @{
            var esAdmin = ViewBag.UserRole == "Admin";
        }

        @if (esAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar Orden
            </a>

            <form asp-action="Delete" 
                  asp-route-id="@Model.Id" 
                  method="post" 
                  style="display:inline;"
                  onsubmit="return confirm('¿Está seguro de eliminar esta orden?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar Orden
                </button>
            </form>
        }
        else
        {
            <span class="badge bg-info fs-6">
                <i class="bi bi-lock"></i> Solo Admin puede editar/eliminar
            </span>
        }
    </div>
</div>