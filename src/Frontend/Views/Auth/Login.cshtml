@model Frontend.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center py-3">
                <h3 class="mb-0">
                    <i class="bi bi-lock-fill"></i> Iniciar Sesión
                </h3>
                <small>Sistema de Gestión de Órdenes</small>
            </div>
            <div class="card-body p-4">
                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Info"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold">
                            <i class="bi bi-person-fill"></i> Usuario / Email
                        </label>
                        <input asp-for="Username" 
                               class="form-control form-control-lg" 
                               placeholder="admin@test.com" 
                               required 
                               autofocus />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-bold">
                            <i class="bi bi-key-fill"></i> Contraseña
                        </label>
                        <input asp-for="Password" 
                               type="password" 
                               class="form-control form-control-lg" 
                               placeholder="••••••••" 
                               required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                        <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                    </button>
                </form>

                <hr />

                <div class="bg-light p-3 rounded">
                    <h6 class="fw-bold text-muted mb-2">
                        <i class="bi bi-info-circle"></i> Usuarios de Prueba:
                    </h6>
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                            <tr>
                                <td class="fw-bold">Admin:</td>
                                <td>
                                    <code>admin@test.com</code> / <code>admin123</code>
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Vendedor:</td>
                                <td>
                                    <code>vendedor@test.com</code> / <code>vendedor123</code>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}